<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/estilo_lineas"

    tools:context=".popup">

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="500dp"
        android:background="#ECEFF1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="0dp"
        android:layout_marginTop="80dp">


        <ImageButton
            android:id="@+id/botonexist"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35px"
            android:layout_marginRight="10px"
            android:onClick="botonexist"
            android:visibility="visible"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/monedaicon"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/Titulotarifa"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/TarifaLocal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/TarifaDirecto"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>